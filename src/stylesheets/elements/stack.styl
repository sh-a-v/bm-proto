.s-stack
  position relative

  display block
  width 100%
  height 100%
  box-sizing border-box

  background-color background-color

.s-big-item-card-wrapper
  position relative
  top 0
  left 0
  z-index 3

  display inline-block
  width 100%
  height 98%

  .s-big-item-card, .s-animated-big-item-card
    position absolute
    left 50%

    display inline-block
    width 310px
    height 100%
    box-sizing border-box
    margin-left -155px

    background-color #ffffff
    border 1px solid #c1c1c1
    border-radius 2px
    text-align center

    &:before, &:after
      position absolute
      top 1px
      left 1px
      z-index -1

      display block
      width 308px
      height 100%

      content ''
      background-color #ffffff
      border 1px solid #c1c1c1
      border-radius 2px

    &:after
      top 3px
      left 3px
      z-index -2

    &-inner
      display inline-block
      width 100%
      height 100%

  .s-animated-big-item-card
    display none

    &:before, &:after
      display none

  .book
    .menu
      position absolute
      top 2px
      left 5px

      padding 10px

    .share
      position absolute
      top 2px
      right 0

      padding 10px

    .cover
      position relative

      display inline-block
      height 200px
      width auto
      margin-top 32px

      text-align right

      .s-img
        height 200px

        box-shadow 0 0 7px rgba(0, 0, 0, 0.36)

      .s-blank
        display inline-block
        height 200px
        width 130px
        padding 20px 10px
        box-sizing border-box
        overflow: hidden;

        border 1px
        background: #f6f4ee;
        box-shadow 0 0 7px rgba(0, 0, 0, 0.36)
        text-align center

      .read
        position absolute

        display inline-block
        width 30px
        margin -15px 0 0 -17px

        text-align center

    .title-authors-wrapper
      display inline-block
      width 100%
      height 68px

      text-align center

      .title
        display inline-block
        width 150px
        max-width 150px
        max-height 36px
        margin-top 8px
        padding 0 50px
        overflow-y hidden

        font-family museo500
        font-size 13px
        line-height 18px

      .authors
        display inline-block
        width 150px
        max-width 150px
        max-height 18px
        padding 0 50px
        overflow-y hidden

        font-family museo300
        font-size 13px
        line-height 20px

    .progress-wrapper
      width 100%
      height 25px
      padding 0 16px
      box-sizing border-box

      .s-progress-value
        width 100%
        height 15px

        text-align left
        font-family museo300
        font-size 9px
        color #979797

      .s-full-progress
        width 100%
        height 1px
        background-color #f2f2f2

      .s-active-progress
        width 12%
        height 1px
        margin-top -1px
        background-color #a6cefa

    .information
      position relative

      display inline-block
      width 100%
      max-height 50px
      padding 0 30px
      margin-top 30px
      overflow hidden
      box-sizing border-box

      text-align center
      font-family museo300
      font-size 15px
      line-height 20px

  .quote
    display none

  .shelf
    display none

.s-hidden-next-cover
  position absolute
  top 25px
  left 25%
  z-index -1

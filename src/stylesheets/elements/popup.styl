.s-popup-wrapper
  position absolute
  top 0
  left 0
  z-index 10

  display none
  width 100%
  height 100%
  padding header-height 0 footer-height 0
  box-sizing border-box

  background rgba(0,0,0,0.5)
  text-align center

.s-popup
  position relative

  display inline-block
  width 97%
  height 100%
  box-sizing border-box
  border-radius 2px

  background #ffffff
